{
  "name": "electron-app",
  "version": "1.0.0",
  "main": "./dist/application/main.js",
  "author": "ranyunlong",
  "license": "MIT",
  "description": "",
  "scripts": {
    "start": "electron-runner start",
    "build": "electron-runner build && electron-builder",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Electron app",
    "appId": "org.electron.app.com",
    "copyright": "YourName",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "multiLanguageInstaller": true,
      "menuCategory": true,
      "license": "./License.txt"
    },
    "dmg": {
      "icon": "resources/icons/icon.icns",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "pkg": {
      "license": "./License.txt"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "icon": "resources/icons"
    },
    "win": {
      "icon": "resources/icons/icon.ico"
    }
  },
  "devDependencies": {
    "@electron-runner/cli": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "prettier": "^2.4.1",
    "ts-loader": "^8.3.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "antd": "^4.16.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.1"
  }
}
