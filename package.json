{
  "name": "electron-app",
  "version": "1.0.0",
  "main": "./dist/application/main.js",
  "author": "ranyunlong",
  "license": "MIT",
  "description": "",
  "scripts": {
    "start": "electron-runner start",
    "build": "electron-runner build && electron-builder",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Electron app",
    "appId": "org.electron.app.com",
    "copyright": "YourName",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "multiLanguageInstaller": true,
      "menuCategory": true,
      "license": "./License.txt"
    },
    "dmg": {
      "icon": "resources/icons/icon.icns",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "pkg": {
      "license": "./License.txt"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "icon": "resources/icons"
    },
    "win": {
      "icon": "resources/icons/icon.ico"
    }
  },
  "devDependencies": {
    "@electron-runner/cli": "^1.1.5",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0"
  }
}
